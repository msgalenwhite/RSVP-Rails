<h3 class='title'>Attending:</h3>
<% if @accepted.length == 0 %>
  <p>n/a</p>
<% else %>
  <% @accepted.each do |name| %>
    <li><%= name %></li>
  <% end %>
<% end %>

<h3 class='title'>Not attending:</h3>
<% if @rejected.length == 0 %>
  <p>n/a</p>
<% else %>
  <% @rejected.each do |name| %>
    <li><%= name %></li>
  <% end %>
<% end %>

<h3 class='title'>Has not responded:</h3>
<% if @has_not_responded.length == 0 %>
  <p>n/a</p>
<% else %>
  <% @has_not_responded.each do |name| %>
    <li><%= name %></li>
  <% end %>
<% end %>
